<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.CreatePage"
             Title="Create Order">
    <StackLayout Padding="20">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Quantity" Text="{Binding Quantity}" Keyboard="Numeric"/>
        <Entry Placeholder="Price" Text="{Binding Price}" Keyboard="Numeric"/>
        <Entry Placeholder="Sale Price" Text="{Binding SalePrice}" Keyboard="Numeric"/>
        <Button Text="Create" Command="{Binding CreateCommand}" />
    </StackLayout>
</ContentPage>