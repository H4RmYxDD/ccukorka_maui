<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.EditPage"
             Title="Edit Order">
    <StackLayout Padding="20">
        <Entry Placeholder="Name" Text="{Binding Order.Name}" />
        <Entry Placeholder="Quantity" Text="{Binding Order.Quantity}" Keyboard="Numeric"/>
        <Entry Placeholder="Price" Text="{Binding Order.Price}" Keyboard="Numeric"/>
        <Entry Placeholder="Sale Price" Text="{Binding Order.SalePrice}" Keyboard="Numeric"/>
        <Button Text="Save" Command="{Binding SaveCommand}" />

    </StackLayout>
</ContentPage>