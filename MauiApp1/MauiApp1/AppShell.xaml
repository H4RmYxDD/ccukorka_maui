<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1.Views"
    Title="MauiApp1">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
Title="CreateCandy"
ContentTemplate="{DataTemplate local:CreateCandyPage}"
Route="CreateCandy" />
    <ShellContent
    Title="Create"
    ContentTemplate="{DataTemplate local:CreatePage}"
    Route="CreatePage" />
    <ShellContent
    Title="Edit"
    ContentTemplate="{DataTemplate local:EditPage}"
    Route="EditPage" />
    <ShellContent
    Title="Reports"
    ContentTemplate="{DataTemplate local:ReportPage}"
    Route="ReportPage" />

</Shell>
